/* pages/task/task.wxss */
.container {
  padding: 30rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 30rpx;
}

.title {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
}

.add-btn {
  background-color: #1AAD19;
  color: white;
  padding: 10rpx 20rpx;
  border-radius: 10rpx;
  font-size: 28rpx;
}

.loading {
  text-align: center;
  padding: 50rpx 0;
  color: #999;
}

.empty-tip {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 100rpx 0;
}

.empty-image {
  width: 200rpx;
  height: 200rpx;
  margin-bottom: 30rpx;
}

.empty-text {
  color: #999;
  font-size: 30rpx;
  margin-bottom: 30rpx;
}

.create-btn {
  background-color: #1AAD19;
  color: white;
  padding: 15rpx 30rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.task-list {
  margin-bottom: 30rpx;
}

.task-item {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.task-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;
}

.task-name {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.task-status {
  font-size: 24rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
}

.pending {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

.in_progress {
  background-color: #E6F7FF;
  color: #1890FF;
}

.completed {
  background-color: #F6FFED;
  color: #52C41A;
}

.word-section {
  background-color: #f9f9f9;
  border-radius: 10rpx;
  padding: 20rpx;
  margin-bottom: 20rpx;
}

.section-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
}

.section-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #666;
}

.arrow {
  width: 20rpx;
  height: 20rpx;
  border-top: 4rpx solid #999;
  border-right: 4rpx solid #999;
  transition: transform 0.3s;
}

.up {
  transform: rotate(-45deg);
}

.down {
  transform: rotate(135deg);
}

.word-list {
  transition: max-height 0.3s;
  overflow: hidden;
  max-height: 1000rpx;
}

.collapsed {
  max-height: 0;
}

.word-group {
  margin-top: 20rpx;
}

.group-title {
  font-size: 26rpx;
  color: #999;
  margin-bottom: 10rpx;
  display: block;
}

.words {
  display: flex;
  flex-direction: column;
}

.word-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.word-actions {
  display: flex;
}

.action-btn {
  font-size: 22rpx;
  padding: 6rpx 12rpx;
  border-radius: 6rpx;
  margin-left: 10rpx;
}

.not-started {
  background-color: #FFF1F0;
  color: #FF4D4F;
}

.learning {
  background-color: #E6F7FF;
  color: #1890FF;
}

.remembered {
  background-color: #F6FFED;
  color: #52C41A;
}

.complete-task {
  background-color: #1AAD19;
  color: white;
  text-align: center;
  padding: 15rpx 0;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.stats-section {
  background-color: white;
  border-radius: 15rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.05);
}

.stats-content {
  transition: max-height 0.3s;
  overflow: hidden;
  max-height: 500rpx;
}

.stat-item {
  display: flex;
  justify-content: space-between;
  padding: 15rpx 0;
  border-bottom: 1rpx solid #eee;
}

.stat-label {
  color: #666;
}

.stat-value {
  font-weight: bold;
  color: #333;
}